{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "types": ["node"],
    "lib": ["ES2015"],
    "declaration": true,
    "outDir": "./bin",
    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["**/__tests__/*"]
}
